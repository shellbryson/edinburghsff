        "@type": "PostalAddress",
        "streetAddress": "Hayweight House - Fifth Floor, 23 Lauriston Street",
        "addressLocality": "Edinburgh",
        "addressCountry": "Scotland",
        "postalCode": "EH3 9DQ"
      }
    }
  </script>
</body>
</html>
